{% extends 'base.html.twig' %}

{% block title %}{{ 'title.productVariant'|trans }}{% endblock %}

{% block body %}
    <div id="product-variant-card" class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between">
            <div id="product-variant-title">
                {% include 'productVariant/components/_header.html.twig' with { product: product, productVariant: productVariant } %}
            </div>
            <div>
                <a class="btn btn-sm btn-primary" data-modal-id="productVariantModal" data-modal-src="{{ path('product_variant_edit', {'id': productVariant.id}) }}" data-modal-title="{{ productVariant.dimensionsString }}"><i class="fa-solid fa-fw fa-pen-to-square"></i></a>
            </div>
        </div>
    </div>

    <div id="product-component-card" class="card shadow-sm mt-3">
        <div class="card-header bg-light d-flex justify-content-between">
            <div id="product-components-title">
                <h2 class="mb-0">{{ 'title.productComponents'|trans }}</h2>
            </div>
            <button class="btn btn-primary" data-modal-id="productComponentModal" data-modal-src="{{ path('product_component_new', {'id': productVariant.id}) }}" data-modal-title="{{ 'title.new_product_component'|trans }}">
                <i class="fa fa-plus pe-2"></i>{{ 'button.add'|trans }}
            </button>
        </div>
        <div class="card-body">
            {{ component('tabulator_grid', {
                id: 'product-components-table',
                pagination: false,
                windowVariable: 'productComponent',
                apiUrl: path('api_product_variant_components', {'id': productVariant.id}),
                showActions: true,
                rowClickRoute: 'product_component_detail',
                editRoute: 'product_component_edit',
                deleteRoute: 'product_component_delete',
                editModalId: 'productComponentModal',
                columns: [
                    { title: 'field.quantity'|trans, field: "quantity", headerSort: false},
                    { title: 'field.length'|trans, field: "length", headerSort: false},
                    { title: 'field.width'|trans, field: "width", headerSort: false},
                    { title: 'field.thickness'|trans, field: "thickness", headerSort: false},
                    { title: 'field.atypicalShape'|trans, field: "atypicalShape", formatter: 'tickCross', headerSort: false},
                ]
            }) }}
        </div>
    </div>

    {% include 'components/form_modal_frame.html.twig' with {
        modal_id: 'productComponentModal',
        title: 'title.productComponent'|trans
    } %}

    {% include 'components/form_modal_frame.html.twig' with {
        modal_id: 'productVariantModal',
        title: 'title.productVariant'|trans
    } %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}