<turbo-stream action="append" target="materialModal_stream_handler">
    <template>
        <script>
            // Zavře modal včetně backdropu
            {
            let modalEl = document.getElementById('materialModal');
                let modal = window.bootstrap?.Modal.getInstance(modalEl);
                if (modal) {
                    modal.hide();
                }
            }
            // Obnoví datagrid
            if (window.materialTable) {
                window.materialTable.replaceData();
            }
        </script>
    </template>
</turbo-stream>
