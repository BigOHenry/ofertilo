{% extends 'base.html.twig' %}

{% block title %}{{ 'title.colors'|trans }}{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h1 class="mb-0">{{ 'title.colors'|trans }}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="d-flex flex-row justify-content-end pb-2">
                    <button class="btn btn-primary" data-modal-id="colorModal" data-modal-src="{{ path('color_new') }}" data-modal-title="{{ 'title.new_color'|trans }}">
                        <i class="fa fa-plus pe-2"></i>{{ 'button.add'|trans }}
                    </button>
                </div>

                {{ component('tabulator_grid', {
                    id: 'colors-table',
                    windowVariable: 'colors',
                    apiUrl: path('api_colors'),
                    showActions: true,
                    rowClickRoute: 'color_detail',
                    editRoute: 'color_edit',
                    deleteRoute: 'color_delete',
                    editModalId: 'colorModal',
                    columns: [
                        { title: 'field.code'|trans, field: 'code', sorter: 'string', responsive: 0 },
                        { title: 'field.description'|trans, field: 'description', sorter: 'string', responsive: 0 },
                        { title: 'field.inStock'|trans, field: 'inStock', sorter: 'boolean', formatter: 'tickCross', responsive: 2 },
                    ]
                }) }}
            </div>
        </div>
    </div>

    {% include 'components/form_modal_frame.html.twig' with {
        modal_id: 'colorModal',
        title: 'title.color'|trans
    } %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}