{% extends 'base.html.twig' %}

{% block title %}{{ 'title.products'|trans }}{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h1 class="mb-0">{{ 'title.products'|trans }}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="d-flex flex-row justify-content-end pb-2">
                    <button class="btn btn-primary" data-modal-id="productModal" data-modal-src="{{ path('product_new') }}" data-modal-title="{{ 'title.new_product'|trans }}">
                        <i class="fa fa-plus pe-2"></i>{{ 'button.add'|trans }}
                    </button>
                </div>

                {{ component('tabulator_grid', {
                    id: 'products-table',
                    windowVariable: 'products',
                    apiUrl: path('api_products'),
                    showActions: true,
                    rowClickRoute: 'product_detail',
                    editRoute: 'product_edit',
                    deleteRoute: 'product_delete',
                    editModalId: 'productModal',
                    columns: [
                        { title: 'field.type'|trans, field: "type", sorter: "string" },
                        { title: 'field.name'|trans, field: "name", sorter: "string" },
                        { title: 'field.country'|trans, field: "country", sorter: "string" },
                        { title: 'field.enabled'|trans, field: "enabled", formatter:"tickCross", sorter:"boolean"},
                    ]
                }) }}
            </div>
        </div>
    </div>

    {% include 'components/form_modal_frame.html.twig' with {
        modal_id: 'productModal',
        title: 'title.product'|trans
    } %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}