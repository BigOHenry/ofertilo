<div class="row">
    <div class="col-12"><label class="fw-semibold">{{ 'field.type'|trans }}:</label> <span>{{ ('product.type.' ~ product.type.value)|trans({}, 'enum') }}</span></div>
    <div class="col-12"><label class="fw-semibold">{{ 'field.country'|trans }}:</label> <span>{{ product.country.name|default('') }}</span></div>
    <div class="col-12"><label class="fw-semibold">{{ 'field.description'|trans }}:</label> <span>{{ product.description(app.request.locale) }}</span></div>
    {% if product.hasImage %}
        <div class="col-12">
            <img src="{{ file_url(product.imageFile) }}" alt="{{ product.name }}" class="img-thumbnail" style="max-width: 400px;">
        </div>
    {% endif %}
</div>